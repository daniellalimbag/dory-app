<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <package android:name="com.google.android.apps.wear.companion" />
    </queries>

    <application
        android:name=".ThesisAppApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:roundIcon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThesisApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity android:name=".presentation.activities.SplashActivity"
            android:theme="@style/Theme.ThesisApp.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.activities.AuthActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="dory"
                    android:host="reset-password" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activities.CreateTeamActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.EditTeamActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.EnrollViaCodeActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.JoinTeamByCodeActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.ManageCoachesActivity"
            android:windowSoftInputMode="adjustPan"/>

        <activity android:name=".presentation.activities.MainActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.TrackNoSwimmerActivity" />
        <activity android:name=".presentation.activities.TrackAddSwimmerActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.TrackSwimmerSuccessActivity" />
        <activity android:name=".presentation.activities.TrackSwimmerActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.HistoryListActivity" />
        <activity android:name=".presentation.activities.HistorySessionActivity" />
        <activity android:name=".presentation.activities.SettingsActivity" />
        <activity android:name=".presentation.activities.SettingsProfileActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.SettingsExportActivity" />
        <activity android:name=".presentation.activities.SettingsImportActivity" />
        <activity android:name=".presentation.activities.ImportAssignActivity" />

        <activity android:name=".presentation.activities.ConnectActivity" />
        <activity android:name=".presentation.activities.SwimmersActivity" />
        <activity android:name=".presentation.activities.SwimmerProfileActivity" />
        <activity android:name=".presentation.activities.CoachSwimmerProfileActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.CreateSwimmerProfileActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.RegisterActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.ExerciseLibraryActivity" />
        <activity android:name=".presentation.activities.AddEditExerciseActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.CategorizeSessionActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.CreateExerciseActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.activities.UncategorizedSessionsActivity" />
        <activity android:name=".presentation.activities.PersonalBestsActivity" />
    </application>



</manifest>