<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnReturn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TRACKING"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Swimmer Registration"
        android:textColor="@color/text"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputSwimmerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_box"
        android:hint="Enter Swimmer’s Name"
        android:textSize="14dp"
        android:padding="12dp"
        android:textColorHint="@color/sub" />

    <EditText
        android:id="@+id/inputSwimmerAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_box"
        android:hint="Enter Swimmer’s Age"
        android:textSize="14dp"
        android:inputType="number"
        android:padding="12dp"
        android:textColorHint="@color/sub" />

    <EditText
        android:id="@+id/inputSwimmerWing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_box"
        android:hint="Enter Swimmer’s Wingspan (Inches)"
        android:textSize="14dp"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColorHint="@color/sub" />

    <EditText
        android:id="@+id/inputSwimmerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/border_box"
        android:hint="Enter Swimmer’s Category"
        android:textSize="14dp"
        android:padding="12dp"
        android:textColorHint="@color/sub" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/button"
        android:drawableRight="@drawable/ic_next"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />
</LinearLayout>