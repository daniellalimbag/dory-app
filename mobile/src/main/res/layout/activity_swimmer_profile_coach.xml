<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="@color/text" />

        <TextView
            android:id="@+id/tvSwimmerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Swimmer Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GOAL CARD SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/goalCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <!-- Container for goal exists / no goal states -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- STATE 1: No Goal (Blurred placeholder) -->
                    <LinearLayout
                        android:id="@+id/noGoalLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@android:drawable/ic_menu_report_image"
                            android:alpha="0.2"
                            android:scaleType="centerInside"
                            android:contentDescription="No goal placeholder" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No goal set"
                            android:textSize="18sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="16dp" />

                        <Button
                            android:id="@+id/btnSetGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Set Goal"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <!-- STATE 2: Goal Exists -->
                    <LinearLayout
                        android:id="@+id/goalExistsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="visible">

                        <!-- Goal Info -->
                        <TextView
                            android:id="@+id/tvGoalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goal: 100m Freestyle &lt; 0:58.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text" />

                        <TextView
                            android:id="@+id/tvGoalDeadline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deadline: Dec 15, 2025"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                        <!-- Progress Graph -->
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/goalProgressChart"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="16dp" />

                        <!-- Action Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:gravity="end">

                            <Button
                                android:id="@+id/btnEditGoal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:textColor="@color/primary" />

                            <Button
                                android:id="@+id/btnDeleteGoal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delete"
                                android:layout_marginStart="8dp"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:textColor="@color/error" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- METRICS DASHBOARD SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metricsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvMetricsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metrics for: Latest Session"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text" />

                    <!-- Lap Time Chart Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Lap Time per Lap"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <!-- Performance Graph: Lap Time -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/performanceChart"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="12dp" />

                    <!-- Velocity Chart Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Velocity per Lap"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <!-- Performance Graph: Velocity -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/velocityChart"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="12dp" />

                    <!-- Heart Rate Chart Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Heart Rate Before / After"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <!-- Heart Rate Chart -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/heartRateChart"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp" />

                    <!-- Stroke Metrics Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:background="@color/background">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stroke Count"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvStrokeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:background="@color/background"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stroke Length"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvStrokeLength"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Additional Metrics -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:background="@color/background">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lap Count"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:background="@color/background"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Velocity"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Third Row: Stroke Index and Lap Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:background="@color/background">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stroke Index"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvStrokeIndex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:background="@color/background"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Lap Time"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvLapTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- LAP BREAKDOWN SECTION -->
            <TextView
                android:id="@+id/tvLapBreakdownTitleCoach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Lap Breakdown"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text" />

            <TableLayout
                android:id="@+id/tableLapBreakdownCoach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@color/background"
                android:padding="8dp"
                android:stretchColumns="0,1,2,3,4,5">

                <!-- Header row -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lap"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time (s)"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strokes"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SL (m)"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v (m/s)"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SI"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/tvLapBreakdownEmptyCoach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="No lap metrics available."
                android:textSize="13sp"
                android:textColor="@color/text_secondary" />

            <!-- SESSION DRILLDOWN CHART -->
            <TextView
                android:id="@+id/tvSessionDrilldownTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Session Drilldown"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/sessionDrilldownChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />

            <!-- EXERCISE LIST SECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Sessions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exerciseListRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
