<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="DASHBOARD"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="235dp"
        android:layout_height="235dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/connect"
        android:drawableTop="@drawable/ic_watch"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Connect Smartwatch"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartTracking"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:backgroundTint="@color/dashboard_button"
            android:drawableLeft="@drawable/ic_swim_off"
            android:enabled="false"
            android:text="Start Tracking"
            android:textColor="@color/disabled_text"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="15dp"
            app:iconGravity="start" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewHistory"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:backgroundTint="@color/dashboard_button"
            android:drawableTop="@drawable/ic_history"
            android:text="View History"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            app:cornerRadius="15dp"
            app:iconGravity="start" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:backgroundTint="@color/dashboard_button"
            android:drawableTop="@drawable/ic_settings"
            android:paddingTop="10dp"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            app:cornerRadius="15dp"
            app:iconGravity="start" />
    </GridLayout>
</LinearLayout>