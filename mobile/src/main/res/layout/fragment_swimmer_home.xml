<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingBottom="24dp">

        <!-- Goal Progress Card (reused from coach view) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/goalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- No Goal State -->
                <LinearLayout
                    android:id="@+id/noGoalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Goal Assigned"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Your coach hasn't set a goal for you yet"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Goal Exists State with Progress Graph -->
                <LinearLayout
                    android:id="@+id/goalExistsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvGoalTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100m Freestyle &lt; 1:00.00"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text" />

                            <TextView
                                android:id="@+id/tvGoalDeadline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Deadline: Dec 31, 2025"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Goal Progress Graph (same as coach view) -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/goalProgressChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Record Session Button -->
        <!-- Watch Connection & Record Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Watch Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:id="@+id/watchStatusIndicatorCard"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_back"
                        android:backgroundTint="@color/error" />

                    <TextView
                        android:id="@+id/tvWatchStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Watch Not Connected"
                        android:textSize="14sp"
                        android:textColor="@color/error" />

                </LinearLayout>

                <!-- Record Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecordSession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Record Session"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Recent Sessions Section -->        <!-- Recent Sessions with Pending Categorization Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="All Sessions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text" />

            <!-- Pending Categorization Badge - Clickable Button Style -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/pendingBadge"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="0 pending"
                android:textSize="12sp"
                android:textColor="@color/error"
                app:icon="@drawable/ic_back"
                app:iconTint="@color/error"
                app:iconSize="12dp"
                app:backgroundTint="#FFEBEE"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Session Metrics Card (graph on top) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/metricsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvMetricsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:layout_marginBottom="16dp" />

                <!-- Metrics Grid (reuse from coach view) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1: Stroke Count, Stroke Length -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stroke Count"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvStrokeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Stroke Length"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvStrokeLength"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 2: Distance, Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Distance"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Duration"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 3: Stroke Index, Lap Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stroke Index"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvStrokeIndex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Lap Time"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvLapTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Charts Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Performance"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/performanceChart"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart Rate"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/heartRateChart"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sessions RecyclerView (max 3 visible, scrollable) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sessionsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="360dp"
            android:layout_marginBottom="16dp"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls" />

    </LinearLayout>
</ScrollView>
