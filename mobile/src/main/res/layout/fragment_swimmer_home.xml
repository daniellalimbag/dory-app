<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Goal Progress Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/goalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- No Goal State -->
                <LinearLayout
                    android:id="@+id/noGoalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Goal Assigned"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Your coach hasn't set a goal for you yet"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Goal Exists State -->
                <LinearLayout
                    android:id="@+id/goalExistsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Goal"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvGoalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100m Freestyle &lt; 1:00.00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text" />

                    <TextView
                        android:id="@+id/tvGoalDeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Deadline: Dec 31, 2025"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Progress"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvCurrentTime"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="1:02.50"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/pill_background"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp">

                            <View
                                android:id="@+id/progressIndicator"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/ic_back"
                                android:backgroundTint="@color/error"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/tvProgressDiff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+2.5s"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/error" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Watch Connection & Recording Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Watch Connection Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="@color/primary"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Watch Status"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvWatchStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Connected"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/error" />
                    </LinearLayout>

                    <View
                        android:id="@+id/watchStatusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_back"
                        android:backgroundTint="@color/error" />
                </LinearLayout>

                <!-- Record Session Button -->
                <Button
                    android:id="@+id/btnRecordSession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Record Session"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary"
                    android:enabled="false"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Connect your watch to record sessions"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Past Sessions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past Sessions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sessionsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false" />

        <!-- Exercises Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Exercises"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exercisesRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</ScrollView>
