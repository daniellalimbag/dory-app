<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top: Energy System selection and auto-filled details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Energy System"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spEnergyTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#0D000000"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etESCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Code (e.g., EN1)" />

            <EditText
                android:id="@+id/etESName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name/Purpose" />

            <EditText
                android:id="@+id/etESEffort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Effort % of Max HR (e.g., 65–75%)" />

            <EditText
                android:id="@+id/etESTypical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Typical Distance per Set (e.g., 1500–3000m)" />

            <EditText
                android:id="@+id/etESRep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rep Distance (e.g., 100–400m)" />

            <EditText
                android:id="@+id/etESRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rest Interval (e.g., 10–20s rest)" />

            <EditText
                android:id="@+id/etESDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total Duration / Set (e.g., 20–40 mins)" />

            <EditText
                android:id="@+id/etESExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Example Workout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnNewES"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New" />

                <Button
                    android:id="@+id/btnDeleteES"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnSaveES"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnNextToExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1F000000"
            android:layout_marginVertical="12dp" />

        <!-- Bottom: Exercise inputs -->
        <LinearLayout
            android:id="@+id/sectionExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/etDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Day (e.g., 2025-10-20)" />

            <EditText
                android:id="@+id/etFocus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Focus (e.g., Aerobic endurance)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Components (from selected Energy System)"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#0D000000">

                <!-- Code spinner limited to selected energy system -->
                <Spinner
                    android:id="@+id/spEnergy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etCompDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Component description (e.g., 10% / 400m)" />

                <EditText
                    android:id="@+id/etCompDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Distance (m)"
                    android:inputType="number" />

                <Button
                    android:id="@+id/btnAddComponent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Component"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComponents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: 0 m"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
