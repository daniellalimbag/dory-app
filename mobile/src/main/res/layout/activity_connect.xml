<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text" />

    <!-- Content Group (All centered vertically + horizontally) -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pair Smartwatch"
            android:textColor="@color/text"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp" />

        <!-- Connection Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not connected"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressPair"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Hint -->
        <TextView
            android:id="@+id/tvHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/sub"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="32dp" />

        <!-- Connect Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConnectNow"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="110dp"
            android:text="Connect"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/primary"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_watch"
            app:iconGravity="start"
            app:iconPadding="16dp"
            app:iconSize="40dp"
            app:iconTint="@android:color/white"
            app:elevation="8dp" />

        <!-- Track Swimmer Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTrackSwimmer"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="110dp"
            android:text="Track Swimmer"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/accent"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_swimmer"
            app:iconGravity="start"
            app:iconPadding="16dp"
            app:iconSize="40dp"
            app:iconTint="@android:color/white"
            app:elevation="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>